<% include ../templates/header %>
<section>
  <div class="container">
    <% posts.forEach(function(post) { %>
      <h1><%= post.title %></h1>
      <p>
        <%= (post.body).substr(0, 100) + "..." %>
      </p>
      <% let date = {day: "numeric", month: "numeric", year: "numeric"}; %>
      <small>Created: <%= post.updated_at.toLocaleDateString("en-US", date); %></small>
      <a class="read-more" href="/post/<%= post._id + "/" + post.title %>">Read More</a>
    <% }) %>
  </div>
</section>
<% include ../templates/footer %>
