<% include ../templates/header %>
<section>
  <div class="container">
    <div class="blog">
      <h1>Compose</h1>
      <form class="form-group" action="/compose" method="post">
        <label for="title">Title</label>
        <input type="text" class="form-control" name="title" placeholder="Title">
        <label for="body">Post</label>
        <textarea class="form-control" name="body" rows="5" cols="100" placeholder="Write somthing interesting"></textarea>
        <button type="submit" class="btn btn-primary btn-sm btn-submit" name="button">Publish</button>
      </form>
    </div>
  </div>
</section>
